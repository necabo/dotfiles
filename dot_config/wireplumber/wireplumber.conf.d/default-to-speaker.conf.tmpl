monitor.alsa.rules = [
{{- if eq .env "work" -}}
  {
    matches = [
      {
        device.name = "alsa_card.pci-0000_00_1f.3-platform-skl_hda_dsp_generic"
      }
    ]
    actions = {
      update-props = {
        device.profile = "HiFi (HDMI1, HDMI2, HDMI3, Mic1, Mic2, Speaker)"
      }
    }
  }
{{- else }}
  {
    matches = [
      {
        device.name = "alsa_card.pci-0000_0d_00.1"
      }
    ]
    actions = {
      update-props = {
        device.profile = "output:hdmi-stereo-extra3"
      }
    }
  }
{{- end }}
]
