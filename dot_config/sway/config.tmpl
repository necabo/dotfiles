# Logo key. Use Mod1 for Alt.
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $menu wmenu-run

{{ if eq .env "home" -}}
set $left-output "LG Electronics LG ULTRAGEAR 409NTEP7D556"
set $middle-output "LG Electronics LG ULTRAGEAR 409NTTQ7E745"
set $right-output "LG Electronics 27GL850 008NTYTN0434"
output $left-output position 0 0 transform 270
output $middle-output position 1440 755
output $right-output position 4000 755
{{- end }}

input type:keyboard {
  xkb_layout "us"
  xkb_variant "altgr-intl"
  xkb_options "caps:escape"
  xkb_numlock enabled
}

input "7504:24868:Ultimate_Gadget_Laboratories_UHK_60_v2" {
  xkb_layout "us"
  xkb_variant "altgr-intl"
}

{{ if eq .env "home" -}}
input "13159:6530:Endgame_Gear_XM2w_4k_v2_Wireless_Gaming_Mouse" {
  accel_profile "flat"
  pointer_accel -0.5
}

input "13159:6512:Endgame_Gear_Endgame_Gear_HS_Dongle" {
  accel_profile "flat"
  pointer_accel -0.5
}
{{- end }}

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
floating_modifier $mod normal

bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

{{ if eq .env "home" -}}
set $ws1 "1:"
set $ws2 "2:"
set $ws3 3
set $ws4 "4: "
set $ws5 "5: "
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 "10:"

workspace $ws1 output $middle-output
workspace $ws2 output $right-output
workspace $ws4 output $left-output
workspace $ws10 output $middle-output
{{- else }}
set $ws1 "1:"
set $ws2 2
set $ws3 3
set $ws4 "4: "
set $ws5 "5:"
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 "10:"
{{- end }}

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+z focus child

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-

bindsym XF86AudioPlay exec playerctl --ignore-player firefox play-pause
bindsym XF86AudioPrev exec playerctl --ignore-player firefox previous
bindsym XF86AudioNext exec playerctl --ignore-player firefox next

bindsym Mod1+space exec makoctl dismiss
bindsym Mod1+Shift+space exec makoctl dismiss --all
bindsym Mod1+grave exec makoctl restore

for_window [app_id="floating"] floating enable
for_window [app_id="com.saivert.pwvucontrol"] floating enable

{{ if eq .env "work" -}}
assign [app_id="Slack"] workspace number 5
{{- end }}
# FIXME: this should only be done for non-floating windows
assign [app_id="org.keepassxc.KeePassXC"] workspace $ws10

bar {
    position top
    strip_workspace_numbers yes
    status_command i3status-rs
    workspace_min_width 50
}

default_border pixel 1

# Autostart
exec swaymsg "exec keepassxc"
{{ if eq .env "work" -}}
exec swaymsg "exec gio launch /usr/share/applications/slack.desktop"
{{- end }}

include /etc/sway/config.d/*

# systemd integration
exec "systemctl --user import-environment {,WAYLAND_}DISPLAY SWAYSOCK; systemctl --user start sway-session.target"
exec swaymsg -t subscribe '["shutdown"]' && systemctl --user stop sway-session.target
